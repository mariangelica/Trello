<h1>Listing homeworks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Duration</th>
      <th>Startdate</th>
      <th>Enddate</th>
      <th>Member</th>
      <th>Finished</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @homeworks.each do |homework| %>
      <tr>
        <td><%= homework.title %></td>
        <td><%= homework.duration %></td>
        <td><%= homework.startdate %></td>
        <td><%= homework.enddate %></td>
        <% @a= homework.team_id %>
        <% @b= Team.find_by(id: @a).name %>
        <td><%= @b %></td>
        <td><%= homework.finished %></td>
        <td><%= link_to 'Show', homework %></td>
        <td><%= link_to 'Edit', edit_homework_path(homework) %></td>
        <td><%= link_to 'Destroy', homework, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

