<h1><%= t('Listing homeworks') %></h1>


<table>
  <thead>
    <tr>
      <th><%= t('Title') %></th>
      <th><%= t('Duration') %></th>
      <th><%= t('Startdate') %></th>
      <th><%= t('Enddate') %></th>
      <th><%= t('Member') %></th>
      <th><%= t('Finished') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @homeworks.each do |homework| %>
      <tr>
        <td><%= homework.title %></td>
        <td><%= homework.duration %></td>
        <td><%= homework.startdate %></td>
        <td><%= homework.enddate %></td>
        <td><%= homework.team.name %></td>
        <td><%= homework.finished %></td>
        <td><%= link_to t('Show'), homework %></td>
        <td><%= link_to t('Edit'), edit_homework_path(homework) %></td>
        <td><%= link_to t('Destroy'), homework, method: :delete, data: { confirm: t('Are you sure?') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

